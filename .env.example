# ElectionGuard JavaScript API Environment Configuration
# Copy this file to .env and modify as needed

# Server Configuration
NODE_ENV=development
PORT=3000

# Security Configuration
API_KEY=your-secure-api-key-change-this-in-production
JWT_SECRET=your-jwt-secret-change-this-in-production

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
RATE_LIMIT_MESSAGE=Too many requests from this IP, please try again later.

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/electionguard-api.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Cryptography Configuration
CRYPTO_PROVIDER=native
RANDOM_SEED_FILE=data/random.seed
KEY_CACHE_SIZE=1000

# Database Configuration (if using PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=electionguard
DB_USER=electionguard
DB_PASSWORD=your-secure-db-password
DB_SSL=false

# Redis Configuration (if using Redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Election Configuration
DEFAULT_GUARDIAN_COUNT=3
DEFAULT_QUORUM=2
MAX_GUARDIANS=10
MAX_CONTESTS=100
MAX_SELECTIONS_PER_CONTEST=50

# Performance Tuning
WORKER_THREADS=4
CRYPTO_WORKERS=2
MEMORY_LIMIT=512m
REQUEST_TIMEOUT=30000

# Development/Testing
ENABLE_TEST_ENDPOINTS=true
MOCK_CRYPTO=false
VERBOSE_ERRORS=true
ENABLE_PROFILING=false

# Production Security (uncomment for production)
# HTTPS_ONLY=true
# HSTS_MAX_AGE=31536000
# CSP_POLICY=default-src 'self'
# X_FRAME_OPTIONS=DENY
# X_CONTENT_TYPE_OPTIONS=nosniff
